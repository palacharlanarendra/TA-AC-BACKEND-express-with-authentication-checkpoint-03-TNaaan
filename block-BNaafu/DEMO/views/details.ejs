<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Document</title>
  </head>
  <body>
    <p>success</p>
    <div><a href="/logout">logout</a></div>
    <div>
      <form action="/dashboard/income" , method="POST">
        <legend>Add Income data</legend>
        <input type="text" name="source" placeholder="Enter source" />
        <input type="number" name="incomeAmount" placeholder="Enter amount" />
        <input type="date" name="incomeDate" />
        <input type="submit" name="submit" value="add" />
      </form>
    </div>
    <div>
      <form action="/dashboard/expense" , method="POST">
        <legend>Add expense data</legend>
        <input type="text" name="category" placeholder="Enter category" />
        <input type="number" name="expenseAmount" placeholder="Enter amount" />
        <input type="date" name="expenseDate" />
        <input type="submit" name="submit" value="add" />
      </form>
    </div>
    <p><%=income%></p>
    <p><%=expense%></p>
    <section>
      <%if(expense.length>0){%>
      <article>
        <%expense.forEach((expense)=>{%>
        <h3><%=expense.category%></h3>
        <p><%=expense.expenseAmount%></p>
        <p><%=expense.expenseDate%></p>
        <%})%>
      </article>
      <%}%>
    </section>
    <section>
      <%if(income.length>0){%>
      <article>
        <%income.forEach((income)=>{%>
        <h3><%=income.source%></h3>
        <p><%=income.incomeAmount%></p>
        <p><%=income.incomeDate%></p>
        <%})%>
      </article>
      <%}%>
    </section>
  </body>
</html>
